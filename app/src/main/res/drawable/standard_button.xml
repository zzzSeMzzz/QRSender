<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#b3837f83" />
            <corners android:radius="@dimen/btn_corners" />


            <padding
                android:left="@dimen/btn_hor_padding"
                android:top="@dimen/btn_ver_padding"
                android:right="@dimen/btn_hor_padding"
                android:bottom="@dimen/btn_ver_padding" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#9c0505" />
            <corners android:radius="@dimen/btn_corners" />


            <padding
                android:left="@dimen/btn_hor_padding"
                android:top="@dimen/btn_ver_padding"
                android:right="@dimen/btn_hor_padding"
                android:bottom="@dimen/btn_ver_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FF1111" />
            <corners android:radius="@dimen/btn_corners" />

            <padding
                android:left="@dimen/btn_hor_padding"
                android:top="@dimen/btn_ver_padding"
                android:right="@dimen/btn_hor_padding"
                android:bottom="@dimen/btn_ver_padding" />
        </shape>
    </item>

</selector>